#!/usr/bin/make -f

%:
	dh $@ --parallel

override_dh_auto_install:
	dh_auto_install
	pip3 install pyinstaller -i https://it.uniontech.com/nexus/repository/pypi-public/simple --target /tmp/code-porting
	cd porting-script && python3 /tmp/code-porting/PyInstaller -F --add-data "config:config" --distpath ../debian/deepin-codeporting/usr/bin/ deepin-codeporting.py

